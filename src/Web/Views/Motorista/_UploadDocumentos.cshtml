@model Raizen.UniCad.Web.Models.ModelMotorista

<div class="modal fade" id="containerVisualizar" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <form id="frmDocumentos" class="form-horizontal frmDocumentos">                    
                    <div class="box border raizen" onkeypress="return raizenCoreJs.raizenHelpers.EnterSalvar(event);" id="">
                        <div class="box-title">
                            <h4><i class="fa fa-upload"></i><span class="hidden-inline-mobile">Upload Documentos</span></h4>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12"><h3>@Model.Motorista.Nome</h3></div>
                                <div class="col-md-12">
                                    @if (Model.Motorista != null && Model.Motorista.Documentos != null)
                                    {
                                        Html.RenderPartial("~/Views/Motorista/_Documentos.cshtml", Model.Motorista.Documentos);
                                    }
                                </div>
                                <div class="row" style="text-align:center">
                                    <div class="col-md-12">
                                        <button class="btn btn-custom voltar" type="button" tabindex="2" onclick="raizenCoreJs.Motorista.SalvarDocumentos(@Model.ID)">
                                            <i class="fa fa-save"></i> Salvar
                                        </button>
                                        <button class="btn btn-custom voltar" type="button" tabindex="2" onclick="$('#containerVisualizar').modal('hide');">
                                            <i class="fa fa-long-arrow-left"></i> Fechar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
