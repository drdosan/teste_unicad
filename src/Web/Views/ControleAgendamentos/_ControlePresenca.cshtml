@model Raizen.UniCad.Model.View.AgendamentoTerminalView
<div class="box border raizen" onkeypress="return raizenCoreJs.raizenHelpers.EnterSalvar(event);" id="containerEdicao">
    <div class="box-title">
        <h4><i class="fa fa-columns"></i><span class="hidden-inline-mobile">Controle de Agendamentos</span></h4>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <form id="frmEdicao" class="form-horizontal">
                    <div class="col-md-12">
                        @Html.HiddenFor(model => model.Data)
                        @Html.HiddenFor(model => model.IdTerminal)
                        @Html.HiddenFor(model => model.IdTipoAgenda)
                        @Html.HiddenFor(model => model.IdEmpresa)
                        
                        <div class="well" style="background-color:#b053aa0d">
                            <div class="row">
                                <div class="col-md-3"><label>Data:&nbsp;</label>@Model.Data.ToString("dd/MM/yyyy")</div>
                                <div class="col-md-9"><label>Agenda:&nbsp;</label>@Model.TipoAgenda</div>
                                <div class="col-md-3"><label>Nº Vagas:&nbsp;</label>@Model.Vagas</div>
                                <div class="col-md-9"><label>Vagas Disponíveis:&nbsp;</label>@Model.VagasDisponiveis</div>
                                <div class="col-md-12"><label>Terminal:&nbsp;</label>@Model.NomeEnderecoTerminal</div>
                            </div>
                        </div>
                        <div class="box border raizen" onkeypress="return raizenCoreJs.raizenHelpers.EnterSalvar(event);" id="containerEdicao">
                            <div class="box-title">
                                <h4><i class="fa fa-list-ul"></i><span class="hidden-inline-mobile">Lista de Inscritos</span></h4>
                            </div>
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <table id="docTable" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover">
                                            <thead>
                                                <tr class="table-raizen">
                                                    <th style="word-wrap: break-word; width:8%">
                                                        Horário
                                                    </th>
                                                    <th style="word-wrap: break-word; width:20%">
                                                        Linha de Negócio
                                                    </th>
                                                    <th style="word-wrap: break-word; width:10%">
                                                        Operação
                                                    </th>
                                                    <th style="word-wrap: break-word; width:15%;">
                                                        CPF do Motorista
                                                    </th>
                                                    <th style="word-wrap: break-word; width:25%">
                                                        Nome do Motorista
                                                    </th>
                                                    <th style="word-wrap: break-word; width:22%">
                                                        Situação
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody id="horarios">
                                                @if (Model != null && Model.listaControles != null)
                                                {
                                                    Html.RenderPartial("_Inscritos", Model.listaControles);
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                </form>
                <div class="row" style="text-align:center">
                    <button class="btn btn-custom save" type="button" tabindex="2" onclick="RaizenCoreJs.prototype.ControleAgendamentos.salvarPresenca();">
                        <i class="fa fa-save"></i> Salvar
                    </button>
                    <button class="btn btn-custom voltar" type="button" tabindex="2" onclick="$('#modalContainerControlaAgendamento').modal('hide');">
                        <i class="fa fa-long-arrow-left"></i> Fechar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
