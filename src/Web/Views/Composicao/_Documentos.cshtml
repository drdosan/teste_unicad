@model List<Raizen.UniCad.Model.View.PlacaDocumentoView>
@using (Html.BootstrapCollapsiblePanel("Documentos", "documentosPanel", false, "fa fa-file-text-o", null, new { style = "max-height:600px; overflow-x:hidden; overflow-y:auto; margin-top:10px; " }))
{
    <table id="docTable" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover">
        <thead>
            <tr class="table-raizen">
                <th style="word-wrap: break-word; width:10%">
                    Tipo Documento
                </th>
                <th style="word-wrap: break-word; width:30%">
                    Descrição
                </th>
                <th style="word-wrap: break-word; width:20%">
                    Data Vencimento
                </th>
                <th style="word-wrap: break-word; width:20%">
                    Placa
                </th>
                <th style="word-wrap: break-word; width:10%">
                    Anexo
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    Html.RenderPartial("_ItemAnexo", item);
                }
            }
        </tbody>
    </table>
}
